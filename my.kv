#:kivy 2.1.0

<MyGrid>:

    
    BoxLayout:
        id:grid 
        orientation: "vertical" # mis pidi eraldatakse elemendid üksteisest "vertical" - üleval ja all, "horizontal" - vasakul ja paremal 
        size: root.width-1, root.height-1 # võtab MyGrid suuruse ja teeb väiksemaks

        # 2
        BoxLayout:
            orientation: "horizontal"

            #3
            BoxLayout:
                orientation: "horizontal"

                #4
                BoxLayout:
                    orientation: "vertical"
                    #5
                    GridLayout:
                        cols: 2
                        rows: 2
                        Label:
                            text: "Nimi"
                            size_hint:(.4, .2)
                        TextInput:
                            id: nimi # millega saad pythoni failis ligi sellele TextInputile
                            multiline: False # kas saad enteriga kirjutada mittu rida teksti
                            hint_text: "Nimi" # hall advice
                            size_hint:(.6, .2) # kui see on selle layouti sees (1 on suurim)

                        Label:
                            size_hint:(.4, .2)
                            text: "eKr"
                        CheckBox:
                            id: ekr
                            size_hint:(.6, .2)
                    
                    ColorPicker:
                        id: varv
                        size_hint:(1, .6)
                # 6
                GridLayout:
                    cols: 2 # read ja veerud
                    rows: 3

                    Label:
                        text: "Aasta"
                        size_hint:(.4, .333)
                    TextInput:
                        size_hint:(.6, .333)
                        hint_text: "Aasta"
                        id: aasta 
                        multiline: False
                
                    Label:
                        text: "Kuu"
                        size_hint:(.4, .333)
                    TextInput:
                        hint_text: "Kuu"
                        id: kuu 
                        multiline: False
                        size_hint:(.6, .333)
                
                    Label:
                        text: "Päev"
                        size_hint:(.4, .333)

                    TextInput:
                        hint_text: "Päev"
                        id: paev 
                        multiline: False
                        size_hint:(.6, .333)

            # 7
            BoxLayout:
                orientation: "horizontal"
                # 8
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        size_hint:(1, .2)
                        text: "Kirjeldus"
                
                    TextInput:
                        text: ''
                        id: kirjeldus
                        hint_text: "Kirjeldus"
                        multiline: True
                        size_hint:(1, .8)   
                # 9
                BoxLayout:
                    size_hint: (0.2, 1)
                    orientation: "vertical"

                    Button:
                        text:"Lisa"
                        on_press: root.lisanupp() # kui vajutad nuppu, siis käivitub see funktsioon

                    Button:
                        text: "Kustuta"
                        on_press: root.kustutanupp() 
     
        Widget:
            id: w_canvas
            canvas:
                Line: 
                    points: 0, self.center_y, self.right, self.center_y