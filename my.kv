#:kivy 2.1.0

<MyGrid>:

    # nimi: nimi
    # aasta: aasta
    # kuu: kuu
    # paev: paev
    # kirjeldus: kirjeldus
    
    GridLayout:
        cols:1
        size: root.width-50, root.height-80
        pos: 50, 50

        # 2
        StackLayout:
            orientation: 'lr-tb'
            # Nimi
            Label:
                text: "Nimi"
                size_hint:(.1, .125)
            TextInput:
                text: ''
                id: nimi 
                multiline: False
                size_hint:(.15, .125)
            
            Label:
                text: "Aasta"
                size_hint:(.1, .167)
            TextInput:
                size_hint:(.15, .167)
                text: ''
                id: aasta 
                multiline: False
            
            Label:
                size_hint:(.3, .2)
                text: "Kirjeldus"

            Button:
                size_hint:(.2, .25)
                text:"Lisa"
                on_press: root.lisanupp

            # eKr
            Label:
                size_hint:(.1, .125)
                text: "eKr"
            CheckBox:
                id: ekr
                size_hint:(.15, .125)
            # kuu
            Label:
                text: "Kuu"
                size_hint:(.1, .166)
            TextInput:
                text: ''
                id: kuu 
                multiline: False
                size_hint:(.15, .167)

            TextInput:
                text: ''
                id: kirjeldus
                multiline: True
                size_hint:(.3, .29999)           
            # Värv
            ColorPicker:
                id: varv
                size_hint:(.25, .25)

            Label:
                text: "Päev"
                size_hint:(.1, .167)

            TextInput:
                text: ''
                id: paev 
                multiline: False
                size_hint:(.15, .167)

            Label:
                size_hint: (.3, .00001)

            Button:
                text: "Minimize"
                size_hint:(.2, .25)
     
        Label:
            canvas:
                Line: 
                    points: 0, self.center_y, self.right, self.center_y




